<UserControl x:Class="WpfApp.UserControls.PlayerIconUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Padding="0 15 0 15">
    <Grid HorizontalAlignment="Right" MouseDown="Icon_MouseDown">
        <Ellipse x:Name="playerIcon" Width="50" Height="50" Fill="Red" Stroke="White" StrokeThickness="3"/>
        <Label x:Name="lblShirtNumber" Content="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Foreground="White"/>
    </Grid>
</UserControl>
